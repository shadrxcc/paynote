<%= render 'home/nav'%>
<p style="color: green"><%= notice %></p>


<div class="pt-4 px-3">
  <h1>Items</h1>
  <h3>Numers of Item: <%= @items.count %></h3>
  
  <div id="items">
  <% running_total = 0 %>
    
  
    <% @items.each do |item| %>
    
      <div id="">
  <p>
    <strong>Name:</strong>
    <%= item.name %>
  </p>

  <p>
    <strong>Amount:</strong>
    <%= item.amount %>
  </p>

</div>

      <p><%= link_to "Show this item", item %></p>
      <% running_total = running_total + (item.amount) %>
    
    <% end %>
    <h3>Total Amount: <%= number_to_currency(running_total) %></h3>
  </div>
</div>

<div class="group-number mb- d-flex px-3 bg-white justify-content-between">
  <p>Amount Spent</p>
  <p>4</p>
</div>

<div class="group-number mb-5 d-flex px-3 bg-white justify-content-between">
  <p>Number of payments</p>
  <p>4</p>
</div>

<%= link_to "New item", new_item_path, class:"btn mx-3 mt-2 m-1 m-md-5 px-5 fixed-bottom green text-white text-center" %>

</div>
