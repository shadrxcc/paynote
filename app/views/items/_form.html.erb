<div class="m-1 m-md-5 px-5">
<%= form_with(model: item) do |form| %>
  <% if item.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(item.errors.count, "error") %> prohibited this item from being saved:</h2>

      <ul>
        <% item.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name, class: "form-control" %>
  </div>

  <div>
    <%= form.label :amount, style: "display: block" %>
    <%= form.number_field :amount, class: "form-control" %>
  </div>


  <div class= "control_group mt-2 ">
    <%= form.label :group, class: "control-group mb-2"%>
    <div class= "controls">
    <%= collection_select( :item, :group_id, Group.all, :id, :name, {}, { :multiple => false } )%>
    </div>
    </div>
  

  <div>
    <%= form.submit class:"btn mx-3 mt-2 m-1 m-md-5 px-5 fixed-bottom green text-white text-center" %>
  </div>
<% end %>
</div>
